<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro"
    tools:context="com.example.miguel.simon_dice.MainActivity">

    <LinearLayout
        android:layout_width="550dp"
        android:layout_height="350dp"
        android:orientation="horizontal"
        tools:background="@color/negro"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <GridLayout
            android:layout_width="525dp"
            android:layout_height="460dp">

            <Button
                android:id="@+id/bStart"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_column="14"
                android:layout_row="1"
                android:background="@color/cyan"
                android:onClick="startPart"
                android:text="Start"
                tools:layout_editor_absoluteX="124dp"
                tools:layout_editor_absoluteY="122dp" />

            <Button
                android:id="@+id/bRojo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="13"
                android:layout_row="0"
                android:background="@color/rojo"
                android:text="Rojo"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                android:onClick="startPart"/>

            <Button
                android:id="@+id/bSalir"
                android:layout_width="109dp"
                android:layout_height="50dp"
                android:layout_column="16"
                android:layout_row="0"
                android:background="@color/blanco"
                android:text="Exit"
                android:onClick="salir"/>

            <Button
                android:id="@+id/bAzul"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="15"
                android:layout_row="0"
                android:background="@color/azul"
                android:text="Azul" />

            <Button
                android:id="@+id/bAmarillo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="13"
                android:layout_row="2"
                android:background="@color/amarillo"
                android:text="Amarillo" />

            <Button
                android:id="@+id/bVerde"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="15"
                android:layout_row="2"
                android:background="@color/verde"
                android:text="Verde" />

            <Button
                android:id="@+id/bReset"
                android:layout_width="109dp"
                android:layout_height="50dp"
                android:layout_column="16"
                android:layout_row="1"
                android:background="@color/blanco"
                android:text="Reset"
                android:onClick="resetPart"/>

        </GridLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>